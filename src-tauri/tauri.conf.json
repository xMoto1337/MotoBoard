{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "MotoBoard",
    "version": "1.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**", "**"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "process": {
        "relaunch": true
      }
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/xMoto1337/MotoBoard/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFNTA1MTk3ODkzMUNCNkUKUldSdXl6R0psMUZRenR6ZHo5dk15WXZoTUVWMEhZR283T1JaU3lxdVlMTW4yR0hUdkF0d0JCUDMK"
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.motoboard.app",
      "targets": ["nsis"],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": true
        }
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MotoBoard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}
